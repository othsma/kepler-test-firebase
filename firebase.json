{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "firebase-functions/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        "src/**/*"
      ]
    }
  ]
}
